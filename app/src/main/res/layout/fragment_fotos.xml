<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:text="Los anexos permiten agregar al formulario fotos que servirán para validar los datos del cliente, por ejemplo fotos del documento de identificación, entre otros."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:gravity="start"
        android:padding="20dip"
        android:id="@+id/lblDescriocion"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/lblDescriocion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/imvFoto1"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="0.45"
                android:layout_marginLeft="20dip"
                android:padding="20dip"
                android:gravity="center"
                android:background="@drawable/agregarfoto"/>

            <ImageView
                android:id="@+id/imvFoto2"
                android:textColor="#000000"
                android:layout_width="0dip"
                android:layout_height="75dip"
                android:layout_weight="0.45"
                android:layout_marginRight="20dip"
                android:layout_marginLeft="20dip"
                android:padding="20dip"
                android:gravity="center"
                android:background="@drawable/agregarfoto"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <ImageView
            android:id="@+id/imvFoto3"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="0.45"
                android:layout_marginTop="20dip"
            android:layout_marginLeft="20dip"
            android:gravity="center"
            android:padding="20dip"
            android:background="@drawable/agregarfoto"/>

            <ImageView
                android:id="@+id/imvFoto4"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="0.45"
                android:layout_marginTop="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginLeft="20dip"
                android:gravity="center"
                android:padding="20dip"
                android:background="@drawable/agregarfoto"/>

        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <ImageView
                android:id="@+id/imgvGuardaFotos"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="0.45"
                android:layout_marginTop="40dip"
                android:layout_marginBottom="40dip"
                android:layout_marginRight="110dip"
                android:layout_marginLeft="110dip"
                android:gravity="center"
                android:padding="20dip"
                android:background="@android:drawable/ic_menu_send" />
        </TableRow>
    </TableLayout>
</RelativeLayout>